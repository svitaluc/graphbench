<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>graphbench-run</id>
    <includeBaseDirectory>true</includeBaseDirectory>

    <formats>
        <format>dir</format>
    </formats>
    <fileSets>
        <fileSet>
<!--            <directory>${project.build.outputDirectory}</directory>-->
            <directory>${project.basedir}/target/graphbench-run-${project.version}</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
            <excludes>
                <exclude>cz/cvut/fit/manta/graphbench/run/*.*</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}/../graphbench-core/src/main/resources</directory>
            <outputDirectory>./conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../graphbench-backend/src/main/resources</directory>
            <outputDirectory>./conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../graphbench-janusgraph/src/main/resources</directory>
            <outputDirectory>./conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../graphbench-janusgraph/target/classes/pom-properties</directory>
            <outputDirectory>./pom-properties</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../graphbench-titan/src/main/resources</directory>
            <outputDirectory>./conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../graphbench-titan/target/classes/pom-properties</directory>
            <outputDirectory>./pom-properties</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.basedir}/../graphbench-all/target/graphbench.jar</source>
            <outputDirectory/>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>${project.groupId}:${project.artifactId}:jar:*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>