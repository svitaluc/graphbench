            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-ext</artifactId>
            <version>1.7.30</version>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>neo4j</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>neo4j</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.neo4j.driver</groupId>
                    <artifactId>neo4j-java-driver</artifactId>
                    <version>4.1.1</version>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <configuration>
                            <includes>
                                <include>cz/cvut/fit/manta/graphbench/GraphImporter.java</include>
                                <include>cz/cvut/fit/manta/graphbench/GraphQuery.java</include>
                                <include>cz/cvut/fit/manta/graphbench/repository/Neo4jImportRepository.java</include>
                                <include>cz/cvut/fit/manta/graphbench/repository/Neo4jQueryRepository.java</include>
                            </includes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>memgraph</id>
            <activation>
                <property>
                    <name>memgraph</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.neo4j.driver</groupId>
                    <artifactId>neo4j-java-driver</artifactId>
                    <version>1.6.4</version>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <configuration>
                            <includes>
                                <include>cz/cvut/fit/manta/graphbench/GraphImporter.java</include>
                                <include>cz/cvut/fit/manta/graphbench/GraphQuery.java</include>
                                <include>cz/cvut/fit/manta/graphbench/repository/MemgraphImportRepository.java
                                </include>
                                <include>cz/cvut/fit/manta/graphbench/repository/MemgraphQueryRepository.java
                                </include>
                            </includes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>arangodb</id>
            <activation>
                <property>
                    <name>arangodb</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>com.arangodb</groupId>
                    <artifactId>arangodb-java-driver</artifactId>
                    <version>6.7.3</version>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <configuration>
                            <includes>
                                <include>cz/cvut/fit/manta/graphbench/GraphImporter.java</include>
                                <include>cz/cvut/fit/manta/graphbench/GraphQuery.java</include>
                                <include>cz/cvut/fit/manta/graphbench/repository/ArangoDbImportRepository.java
                                </include>
                            </includes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>orientdb</id>
            <activation>
                <property>
                    <name>orientdb</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>com.orientechnologies</groupId>
                    <artifactId>orientdb-client</artifactId>
                    <version>3.0.33</version>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <configuration>
                            <includes>
                                <include>cz/cvut/fit/manta/graphbench/GraphImporter.java</include>
                                <include>cz/cvut/fit/manta/graphbench/GraphQuery.java</include>
                                <include>cz/cvut/fit/manta/graphbench/repository/OrientDbImportRepository.java
                                </include>
                            </includes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>dgraph</id>
            <activation>
                <property>
                    <name>dgraph</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>io.dgraph</groupId>
                    <artifactId>dgraph4j</artifactId>
                    <version>20.03.1</version>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <configuration>
                            <includes>
                                <include>cz/cvut/fit/manta/graphbench/GraphImporter.java</include>
                                <include>cz/cvut/fit/manta/graphbench/GraphQuery.java</include>
                                <include>cz/cvut/fit/manta/graphbench/repository/DgraphImportRepository.java
                                </include>
