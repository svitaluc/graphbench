                                </include>
                            </includes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>titan</id>
            <activation>
                <property>
                    <name>titan</name>
                </property>
            </activation>
            <dependencies>
                <!-- Titan-->
                <dependency>
                    <groupId>org.apache.directory.studio</groupId>
                    <artifactId>org.apache.commons.io</artifactId>
                    <version>2.4</version>
                </dependency>
                <dependency>
                    <groupId>commons-configuration</groupId>
                    <artifactId>commons-configuration</artifactId>
                    <version>1.10</version>
                </dependency>
                <dependency>
                    <groupId>com.thinkaurelius.titan</groupId>
                    <artifactId>titan-core</artifactId>
                    <version>0.4.4</version>
                </dependency>
                <dependency>
                    <groupId>com.thinkaurelius.titan</groupId>
                    <artifactId>titan-lucene</artifactId>
                    <version>0.4.4</version>
                </dependency>
                <dependency>
                    <groupId>eu.profinit.manta</groupId>
                    <artifactId>manta-dataflow-repository-connector-persistit</artifactId>
                    <version>1.30-SNAPSHOT</version>
                </dependency>
                <dependency>
                    <groupId>org.apache.lucene</groupId>
                    <artifactId>lucene-core</artifactId>
                    <version>4.4.0</version>
                </dependency>
                <dependency>
                    <groupId>org.apache.lucene</groupId>
                    <artifactId>lucene-analyzers-common</artifactId>
                    <version>4.4.0</version>
                </dependency>
                <dependency>
                    <groupId>org.apache.lucene</groupId>
                    <artifactId>lucene-queryparser</artifactId>
                    <version>4.4.0</version>
                </dependency>
                <dependency>
                    <groupId>org.apache.lucene</groupId>
                    <artifactId>lucene-spatial</artifactId>
                    <version>4.4.0</version>
                </dependency>
                <dependency>
                    <groupId>com.akiban</groupId>
                    <artifactId>akiban-persistit</artifactId>
                    <version>3.3.0</version>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <configuration>
                            <includes>
                                <include>cz/cvut/fit/manta/graphbench/GraphImporter.java</include>
                                <include>cz/cvut/fit/manta/graphbench/repository/TitanImportRepository.java</include>
                            </includes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>janus</id>
            <activation>
                <property>
                    <name>janus</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.janusgraph</groupId>
                    <artifactId>janusgraph-core</artifactId>
                    <version>0.5.2</version>
                </dependency>
                <dependency>
                    <groupId>org.janusgraph</groupId>
                    <artifactId>janusgraph-berkeleyje</artifactId>
                    <version>0.5.2</version>
                </dependency>
                <dependency>
                    <groupId>org.janusgraph</groupId>
                    <artifactId>janusgraph-cql</artifactId>
                    <version>0.5.2</version>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <configuration>
                            <includes>
                                <include>cz/cvut/fit/manta/graphbench/GraphImporter.java</include>
                                <include>cz/cvut/fit/manta/graphbench/repository/JanusImportRepository.java</include>
                            </includes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <id>import</id>
                        <configuration>
                            <goals>
                                <goal>java</goal>
                            </goals>
                            <mainClass>cz.cvut.fit.manta.graphbench.GraphImporter</mainClass>
                            <arguments>
                                <argument>../csv-generator/names.csv</argument>
                                <argument>../csv-generator/friends.csv</argument>
                            </arguments>
                            <systemProperties>
                                <systemProperty>
                                    <key>io.netty.tryReflectionSetAccessible</key>
                                    <value>true</value>
                                </systemProperty>
                            </systemProperties>
                        </configuration>
                    </execution>
                    <execution>
                        <id>query</id>
                        <configuration>
                            <goals>
                                <goal>java</goal>
                            </goals>
                            <mainClass>cz.cvut.fit.manta.graphbench.GraphQuery</mainClass>
                            <arguments>
                                <argument>../csv-generator/names.csv</argument>
                            </arguments>
                            <systemProperties>
                                <systemProperty>
                                    <key>io.netty.tryReflectionSetAccessible</key>
                                    <value>true</value>
                                </systemProperty>
                            </systemProperties>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>